#include <stdio.h>
#include <ctype.h>

#define MAX 100

char stack[MAX];
int top = -1;

void push(char x) {
    stack[++top] = x;
}

char pop() {
    if(top == -1)
        return -1;
    else
        return stack[top--];
}

int priority(char x) {
    if(x == '(')
        return 0;
    if(x == '+' || x == '-')
        return 1;
    if(x == '*' || x == '/' || x == '%')
        return 2;
    if(x == '^')
        return 3;
    return -1;
}

int main() {
    char exp[MAX], x;
    int i = 0;

    printf("Enter infix expression: ");
    scanf("%s", exp);

    printf("Postfix expression: ");

    while(exp[i] != '\0') {
        char ch = exp[i];

        // If operand → print directly
        if(isalnum(ch)) {
            printf("%c", ch);
        }

        // If '(' → push to stack
        else if(ch == '(') {
            push(ch);
        }

        // If ')' → pop until '('
        else if(ch == ')') {
            while((x = pop()) != '(')
                printf("%c", x);
        }

        // Operator (+, -, *, /, ^)
        else {
            while(top != -1 && priority(stack[top]) >= priority(ch))
                printf("%c", pop());
            push(ch);
        }
        i++;
    }

    // Pop remaining operators
    while(top != -1)
        printf("%c", pop());

    printf("\n");
    return 0;
}
